<section class="edit-page">
  <div class="container mt-5">
    <h3> Chỉnh sửa bài viết</h3>
    <form class="mt-4" action= "/posts/{{post._id}}?_method=PUT " method="POST">
      <div class="form-group">
        <label for="title">Tiêu đề</label>
        <input
          type="text"
          class="form-control"
          id="title"
          name="title"
          placeholder="Tiêu đề bài biết"
          value="{{ post.title }}"
        />
      </div>
      <div class="form-group">
        <label for="image">Mô tả bài viết</label>
        <input
          type="text"
          class="form-control"
          id="image"
          name="image"
          placeholder="Mô tả bài viết "
          value="{{post.image}}"
        />
      </div>
      <textarea id="editor" name="content">{{ post.content }}</textarea>
      <button type="submit" class="btn btn-primary">Luu bài viết</button>
    </form>
  </div>
</section>